<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.description %></td>
        <td><%= event.creator.name %></td>
        <td><%= link_to 'Show', event %></td>
        <% if check && logged_user.attending?(event) %>
          <td><%= link_to 'Unattend', unattend_path(event), method: :post %></td>
        <% else %>
          <td><%= link_to 'Attend', attend_path(event), method: :post %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if check %>
  <%= link_to 'Home', root_path %>
  <%= link_to 'New Event', new_event_path %>
<% end %>
