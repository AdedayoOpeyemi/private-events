<p id="notice"><%= notice %></p>

<h1>Upcoming Events (Created)</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @upcoming_events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.date %></td>
        <td><%= event.creator.name %></td>
        <td><%= event.attendees.count %> Attendee/s</td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to switch_status(event), attend_unattend(event), method: :post %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<hr />

<h1>Past Events (Created)</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @past_events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.date %></td>
        <td><%= event.creator.name %></td>
        <td><%= event.attendees.count %> Attendee/s</td>
        <td><%= link_to 'Show', event %></td>
      <td><%= link_to switch_status(event), attend_unattend(event), method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<hr />


<% if check %>
  <%= link_to 'Home', root_path %>
  <%= link_to 'New Event', new_event_path %>
<% end %>
